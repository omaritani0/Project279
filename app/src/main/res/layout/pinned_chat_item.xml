<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@drawable/background_photo_guidlines">

    <!-- GridLayout with two columns for the chat boxes -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- First Chat Box -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/ic_launcher_background">

            <ImageView
                android:id="@+id/profileImage1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_placeholder" />

            <TextView
                android:id="@+id/chatName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/lastMessage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last message"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Second Chat Box -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/ic_launcher_background">

            <ImageView
                android:id="@+id/profileImage2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_placeholder" />

            <TextView
                android:id="@+id/chatName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/lastMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last message"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Third Chat Box -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/ic_launcher_background">

            <ImageView
                android:id="@+id/profileImage3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_placeholder" />

            <TextView
                android:id="@+id/chatName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
