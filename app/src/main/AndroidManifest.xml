<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="My.project">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FACE_RECOGNITION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">


        <!-- Main Activity -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".UploadPhotoActivity" />
        <activity android:name=".AddMorePhotosActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".ChatDetailActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".MeetingSchedulerActivity" />
        <activity android:name=".NextActivity" />
        <activity android:name=".PhotoGuidlinesActivity" />
        <activity android:name=".PhotoSelectionActivity" />
        <activity android:name=".ProfileDisplayActivity" />
        <activity android:name=".SearchSuggestionsActivity" />


    </application>

</manifest>
